<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center mb-3">Nuevo Campamento</h1>

        <div class="col-6 offset-3">
            <form action="/campamentos" method="post">
                <div class="mb-3">
                    <label class="form-label" for="titulo">Título</label>
                    <input class="form-control" type="text" name="campamento[titulo]" id="titulo">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="ubicacion">Ubicación</label>
                    <input class="form-control" type="text" name="campamento[ubicacion]" id="ubicacion">
                </div>

                <div class="col-auto">
                    <label class="sr-only" for="precio">Precio</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <div class="input-group-text" id="precio-label">$</div>
                        </div>
                        <input type="number" class="form-control" id="precio" name="campamento[precio]"
                            aria-describedby="precio-label" placeholder="0.0">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="imagen">Imagen URL</label>
                    <input class="form-control" type="text" name="campamento[imagen]" id="imagen">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="descripcion">Descripción</label> <br>
                    <textarea class="form-control" name="campamento[descripcion]" id="descripcion" cols="30"
                        rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Guardar</button>
                </div>
            </form>
            <div class="mb-3">
                <a href="/campamentos">Todos los campamentos</a>
            </div>
        </div>
    </div>